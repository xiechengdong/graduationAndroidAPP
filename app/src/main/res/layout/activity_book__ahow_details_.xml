<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color1"
    tools:context=".activity.teacher_maiactivity.Teacher_MainActivity_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:background="@color/color7"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_marginLeft="20sp"
            android:id="@+id/All_book_show_details_back"
            android:onClick="click"
            />

        <TextView
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="课程详情"
            android:textSize="25sp"
            android:paddingRight="35dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/All_book_show_details_bookFace"
        android:layout_width="100sp"
        android:layout_height="140sp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/book_face"
        android:onClick="click"
        android:layout_marginTop="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_name"
            android:textSize="20sp"
            android:layout_marginLeft="30sp"
            />
        <TextView
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:id="@+id/All_book_show_details_bookName"
            android:textSize="15dp"
            android:layout_marginLeft="10sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Teacher_name"
            android:textSize="20sp"
            android:layout_marginLeft="30sp"
            />
        <TextView
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:id="@+id/All_book_show_details_TeacherName"
            android:textSize="15dp"
            android:layout_marginLeft="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_content"
            android:textSize="20sp"
            android:layout_marginLeft="30sp"
            />
        <TextView
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:id="@+id/All_book_show_details_BookContent"
            android:textSize="15dp"
            android:layout_marginLeft="10sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_bookContent"
            android:textSize="15dp"
            android:id="@+id/All_book_show_details_openBookContent"
            android:onClick="click"
            android:background="@color/color2"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="留言"
        android:textSize="20sp"
        android:layout_marginLeft="30sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:id="@+id/All_book_show_details_messageContent"
            android:textSize="15dp"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:id="@+id/All_book_show_details_messgae"
            android:onClick="click"
            android:background="@color/color3"
            android:src="@mipmap/fabiao"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/All_book_show_details_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        >
    </ListView>

</LinearLayout>